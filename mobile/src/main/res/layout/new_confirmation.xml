<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Confirmation message type :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/rg_newConfType">

        <RadioButton
            android:text="Steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_stepsNewConf"
            android:layout_weight="1"
            android:checked="true"/>

        <RadioButton
            android:text="Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_activityNewConf"
            android:layout_weight="1" />

        <RadioButton
            android:text="Inactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_inactivityNewConf"
            android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:text="Content :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_contentNewConf"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_contentNewConf"
        android:textSize="14sp"
        android:hint="Content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Insert 'steps' placeholder"
            android:drawableLeft="@mipmap/ic_steps"/>
    </RelativeLayout>

</LinearLayout>