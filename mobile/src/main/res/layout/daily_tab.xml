<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:layout_width="230sp"
            android:layout_height="230sp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_barColor="@color/colorPrimary"
            CircleProgressView:cpv_barWidth="15sp"
            CircleProgressView:cpv_innerContourSize="0sp"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_outerContourSize="0sp"
            CircleProgressView:cpv_rimColor="@color/rimBar"
            CircleProgressView:cpv_rimWidth="15sp"
            CircleProgressView:cpv_seekMode="false"
            CircleProgressView:cpv_spinColor="@color/colorPrimary"
            CircleProgressView:cpv_textColor="@color/colorPrimary"
            CircleProgressView:cpv_textScale="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:hint="Your daily goal:"/>

        <TextView
            android:id="@+id/goal_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"/>

        <!--
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_clear"
            android:text="Clear Database"/>
            -->

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="10sp"
            android:id="@+id/barChart"
            android:layout_weight="1.45">

        </com.github.mikephil.charting.charts.BarChart>

    </LinearLayout>

</ScrollView>